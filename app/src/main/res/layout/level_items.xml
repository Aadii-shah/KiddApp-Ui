    <RelativeLayout

        android:id="@+id/engine"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="50dp"
        android:layout_above="@id/mainContainer">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/engine"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:layout_above="@id/mainContainer"
        android:layout_toRightOf="@+id/engine">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_above="@id/home"
        android:layout_toRightOf="@id/engine">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/roof"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/smokePipe"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_above="@id/engine"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/home">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/smokepipe"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="10dp"
        android:layout_toStartOf="@id/home"
        android:layout_above="@id/smokePipe">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/smokeroof"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/mainContainer"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_above="@id/containerWheeel">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/container" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@+id/line"
            android:orientation="horizontal">

            <View
                android:layout_width="50dp"
                android:layout_height="match_parent"/>

            <View
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="#fff"/>

            <View
                android:layout_width="50dp"
                android:layout_height="match_parent"/>

            <View
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="#fff"/>

            <View
                android:layout_width="50dp"
                android:layout_height="match_parent"/>

            <View
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="#fff"/>





        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:background="#000"
            android:layout_height="10dp"/>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/containerWheeel"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-20dp">

        <LinearLayout
            android:id="@+id/wheel"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/ic_wheelbw" />

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1" />


            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/ic_wheelbw"  />

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

        </LinearLayout>

        <ImageView
            android:id="@+id/biggerWheel"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_wheelbw" />

    </RelativeLayout>


    <View
        android:id="@+id/connector1"
        android:layout_width="20dp"
        android:layout_height="7dp"
        android:background="#ffa500"
        android:layout_marginBottom="7dp"
        android:layout_above="@id/containerWheeel"
        android:layout_toEndOf="@+id/mainContainer"/>

    <View
        android:id="@+id/connector"
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:background="#ffa500"
        android:layout_above="@id/containerWheeel"
        android:layout_toEndOf="@id/connector1"/>

    <View
        android:id="@+id/connector2"
        android:layout_width="20dp"
        android:layout_height="7dp"
        android:background="#ffa500"
        android:layout_marginBottom="7dp"
        android:layout_above="@id/containerWheeel"
        android:layout_toEndOf="@+id/connector"/>


    <RelativeLayout
        android:id="@+id/containerA"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@id/containerWheeel"
        android:layout_toEndOf="@id/connector2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/lettercontainer">



            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="A"
                android:textSize="100sp"
                android:textStyle="bold"
                android:textColor="#ff2a1a"/>
        </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_below="@id/containerA"
        android:layout_marginTop="-20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_toEndOf="@id/connector2">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/ic_wheelbw" />

    </RelativeLayout>



</RelativeLayout>